{
  "name": "electronreacttemplate",
  "version": "0.1.0",
  "author": {
    "name": "Author Name",
    "email": "email@email.com"
  },
  "description": "description",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hexellate/Electron-React-Template.git"
  },
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist-win": "npm run clean && npm run compile && npx electron-builder -w --x64 --ia32",
    "dist-lin": "npm run clean && npm run compile && npx electron-builder -l --x64 --ia32",
    "dist-mac": "npm run clean && npm run compile && npx electron-builder -m --x64 --ia32",
	"build": "npm run clean && npm run compile && npx electron-builder -wl --x64 --ia32",
    "clean": "rimraf \"dist\"",
    "clean-npm": "rimraf \"package-lock.json\" && rimraf \"node_modules\"",
    "rebuild-npm": "npm run clean-npm && npm install",
    "clean-all": "npm run clean && npm run clean-npm"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "electron": "^3.0.6",
    "electron-builder": "^20.28.4",
    "electron-webpack": "^2.3.1",
    "electron-webpack-ts": "^2.1.1",
    "eslint": "^5.8.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "node-sass": "^4.9.4",
    "react": "^16.5.2",
    "react-dom": "^16.6.0",
    "sass-loader": "^7.1.0",
    "typescript": "^3.1.3",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-sources": "^1.3.0"
  },
  "dependencies": {
    "source-map-support": "^0.5.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "build": {
    "appId": "com.author.application",
    "productName": "Formatted App Name",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable"
        },
        {
          "target": "zip"
        },
        {
          "target": "appx"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Shortcut Name"
    },
    "mac": {
      "category": "public.app-category.utility"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
